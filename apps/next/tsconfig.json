{
  "exclude": ["node_modules"],
  "extends": "@repo_name/typescript-config/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@storefront/*": ["src/*"],
      "@repo_name/logger/*": ["../../packages/logger/src/*"],
      "@repo_name/logger": ["../../packages/logger/src/index.ts"],
      "@repo_name/ui": ["../../packages/ui/src/index.tsx"],
      "@repo_name/ui/*": ["../../packages/ui/src/*"],
      "@ui/*": ["../../packages/ui/src/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true
  },
  "include": ["src", "next.config.ts", "next-env.d.ts", ".next/types/**/*.ts"]
}
