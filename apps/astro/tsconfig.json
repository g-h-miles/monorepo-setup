{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/ui": ["../../packages/ui/src/index.tsx"],
      "@repo/ui/*": ["../../packages/ui/src/*"],
      "@ui/*": ["../../packages/ui/src/*"]
    }
  }
}
