{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@repo_name/ui/*": ["../../packages/ui/src/*"],
      "@repo_name/ui": ["../../packages/ui/src/index.ts"],
      "@ui/*": ["../../packages/ui/src/*"]
    }
  }
}
