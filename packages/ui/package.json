{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "sideEffects": false,
  "files": [
    "dist/**",
    "dist"
  ],
  "exports": {
    "./counter-button": {
      "development": {
        "types": "./src/counter-button/index.tsx",
        "import": "./src/counter-button/index.tsx"
      },
      "import": {
        "types": "./dist/es/counter-button.d.mts",
        "default": "./dist/es/counter-button.mjs"
      },
      "require": {
        "types": "./dist/cjs/counter-button.d.ts",
        "default": "./dist/cjs/counter-button.js"
      }
    },
    "./link": {
      "development": {
        "types": "./src/link/index.tsx",
        "import": "./src/link/index.tsx"
      },
      "import": {
        "types": "./dist/es/link.d.mts",
        "default": "./dist/es/link.mjs"
      },
      "require": {
        "types": "./dist/cjs/link.d.ts",
        "default": "./dist/cjs/link.js"
      }
    }
  },
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.12.0",
    "bunchee": "^6.3.2",
    "eslint": "^9.19.0",
    "typescript": "5.7.3"
  },
  "peerDependencies": {
    "@types/react": ">=18",
    "@types/react-dom": ">=18",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  }
}
